
<h2><b><%= @queen.name %></b></h2>
<p><strong>Location:</strong> <%= @queen.location %></p>
<p><strong>Price:</strong> <%= @queen.price %></p>
<p><strong>Skills:</strong> <%= @queen.skills %></p>


<%= simple_form_for [@queen, @booking] do |f| %>
  <%= f.input :date %>
  <%= f.input :location %>
  <%= f.button :submit, "Book this Queen", class: "button btn-primary" %><br>
<% end %>


<p>Want to edit your profile?</p>
<%= link_to 'Edit Profile', edit_queen_path(@queen), class: 'btn btn-primary' %><br>
<%= link_to 'Back to Index', queens_path %>
